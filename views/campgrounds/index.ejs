<% include ../partials/header %>

<% if (currentUser && currentUser.isAdmin) { %>
  <h1>You are an admin!</h1>
<% } %>

<header class="jumbotron">
  <div class="container">
    <h1>Welcome To YelpCamp!</h1>
    <p>View our hand-picked campgrounds from all over the world</p>
    <p>
      <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
    </p>
    <p>
      <form action="/campgrounds" method="GET" class="form-inline">
        <div class="form-group">
          <input type="text" name="search" placeholder="Campground title search..." class="form-control">
          <input type="submit" value="Search" class="btn btn-default">
        </div>
      </form>
    </p>
  </div>
</header>

<div class="row text-center" id="campground-grid">
  <div class="col-lg-12">
    <h3>Our Most Popular Campgrounds!</h3>
  </div>

  <div class="col-md-12">
    <% if (noMatch !== null) { %>
      <div class="alert alert-danger" role="alert">
        <%= noMatch %>
      </div>
    <% } %>
  </div>

  <% campgrounds.forEach(camp => { %>
  <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
    <div class="card">
      <img class="card-img-top" src="<%= camp.image[0] %>" alt="<%= camp.name %>">
      <div class="card-body">
        <h5 class="card-title"><%= camp.name %></h5>
        <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
      </div>
    </div>
  </div>
  <% }); %>
</div>

<% include ../partials/footer %>
