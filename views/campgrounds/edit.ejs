<% include ../partials/header %>

<div class="row">
  <h1 style="text-align: center;">Edit <%= foundCampground.name %></h1>

  <div style="width: 30%; margin: 25px auto;">
    <form action="/campgrounds/<%= foundCampground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="name">Name:</label>
        <input id="name" class="form-control" type="text" name="campground[name]" value="<%= foundCampground.name %>">
      </div>
      <div class="form-group">
        <label for="price">Price:</label>
        <input id="price" class="form-control" type="number" name="campground[price]" value="<%= foundCampground.price %>" min="0.01" step="0.01">
      </div>
      <div class="form-group">
        <label for="desc">Description:</label>
        <input id="desc" class="form-control" type="text" name="campground[description]" value="<%= foundCampground.description %>">
      </div>
      <div class="form-group">
        <label for="image">Image Link (keep or change URL):</label>
        <input id="image" class="form-control" type="text" name="campground[image]" value="<%= foundCampground.image %>">
      </div>

      <p class="centered">Or chose one or more of your own images.</p>

      <div class="form-group">
        <label for="img">Image File:</label>
        <input id="img" type="file" name="campground[image]" accept="image/*" multiple="">
      </div>

      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
      </div>
    </form>
    <a href="/campgrounds">Go Back</a>
  </div>

</div>


<% include ../partials/footer %>
