<% include ../partials/header %>

<div class="row">
  <div class="col-md-12">
    <h1 class="h3 mb-3 font-weight-normal text-center">Edit Comment</h1>
    <form class="form-signin" action="/campgrounds/<%= campground_id %>/comments/<%= foundComment._id %>?_method=PUT" method="POST">
      <label for="inputCommentText" class="sr-only">Comment</label>
      <input id="inputCommentText" class="form-control mb-2" type="text" name="comment[text]" value="<%= foundComment.text %>" autofocus>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>      
    </form>
    <div class="form-signin">
      <a href="/campgrounds/<%= campground_id %>">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
