<% include ../partials/header %>

<div class="row">
  <div class="col-md-12">
  <h1 class="h3 mb-3 font-weight-normal text-center">Add New Comment to <%= campground.name %></h1>
    <form class="form-signin" action="/campgrounds/<%= campground._id %>/comments" method="POST">
      <label for="inputCommentname" class="sr-only">Comment</label>
      <input id="inputCommentname" class="form-control mb-2" type="text" name="comment[text]" placeholder="Your comment" autofocus>

      <fieldset class="starability-basic">
        <legend class="font-sized">Rate campground:</legend>
        <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
        <input type="radio" id="first-rate1" name="rating" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="rating" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="rating" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="rating" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="rating" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
        <span class="starability-focus-ring"></span>
      </fieldset>

      <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
    </form>
    <div class="form-signin">
      <a href="/campgrounds/<%= campground._id %>">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
